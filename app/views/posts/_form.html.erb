<div class="row">
  <div class="col-lg-12">
    <div class="well">                     
            <%= form_for @post, html: { multipart: true } do |f| %>
              <div class="form-group">               
                <%= f.text_area :content, class: 'form-control input-mentionable', autofocus: true, placeholder: 'Whats on your mind?' %>
                
              </div>   
              <div class="form-group">
                  <%= f.file_field :image, class: 'form-control input-mentionable'%>
                  <% if @post.image? %>
                  <br>
                    <%= image_tag @post.image_url, style: "width: 100%;border-radius: 1rem;" %>
                    <%= f.check_box :remove_image %>
                      Remove Image
                  <% end %>

              </div>               
              <%= file_field_tag "post[media]", class: "hidden", id: "media-upload-btn" %>
                  <%= button_tag id: "post", class: "btn btn-primary" do %>
                    <%= fa_icon "paper-plane" %> Post
              <% end %>              
            <% end %>
            
    </div>
  </div>
</div>


